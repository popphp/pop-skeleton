#!/usr/bin/php
<?php

require_once __DIR__  . '/../vendor/autoload.php';

$app = new Skeleton\Application();
$app->router()->addRoutes([
    'help' => [
        'controller' => 'Skeleton\Controller\ConsoleController',
        'action'     => 'help',
        'default'    => true
    ],
    'hello [<name>]' => [
        'controller' => 'Skeleton\Controller\ConsoleController',
        'action'     => 'hello'
    ]
]);

$app->run();
